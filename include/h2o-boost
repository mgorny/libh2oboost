#pragma once

#ifndef _H2O_BOOST_HXX
#define _H2O_BOOST_HXX 1

#include <h2o>
#include <h2o-units>

namespace h2o
{
	namespace boost
	{
		class H2O : private ::h2o::H2O
		{
			H2O(::h2o::H2O other);

		public:
			H2O(quantity::MPa p, quantity::K T);
			static H2O Tx(quantity::K T, quantity::dimless x);
			static H2O px(quantity::MPa p, quantity::dimless x);
			static H2O ph(quantity::MPa p, quantity::kJ_kg h);
			static H2O ps(quantity::MPa p, quantity::kJ_kg s);
			static H2O rhoT(quantity::kg_m3 rho, quantity::K T);

			quantity::MPa p() const;
			quantity::K T() const;
			quantity::dimless x() const;
			quantity::kg_m3 rho() const;

			quantity::m3_kg v() const;
			quantity::kJ_kg u() const;
			quantity::kJ_kg h() const;
			quantity::kJ_kgK s() const;
		};
	};
};

#endif /*_H2O_BOOST_HXX*/

// vim:syn=cpp
